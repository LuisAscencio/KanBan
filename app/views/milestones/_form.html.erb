<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for(@milestone, class: "mx-auto") do |f| %>
<div class="form-group">
<%= f.text_field :title, :placeholder => "What do you want to accomplish?", :class => "form-control"%>
</div>

<div class="input-group mb-3">
  <div class="input-group-prepend">
    <label class="input-group-text" for="inputGroupSelect01">Category</label>
  </div>
<%= f.select :category, ["General", "Exercise", "Diet", "Career", "Personal", "Other"],  {}, class: "custom-select" %></div>

<div class="form-group">
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.text_field :due_date, :placeholder => "When do you want to accomplish this goal?", :class => "form-control"%>
</div>
<div class="d-flex justify-content-between">
<%= f.submit :submit, :class => "btn btn-primary" %>
<% end %> 
  <% if current_user.milestones.count > 0 %>
    <%= link_to  "Back to Milestones", root_path %>
    <% end %>
</div>