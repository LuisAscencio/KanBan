<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for(@milestone) do |f| %>
<%= f.label :title%>
<%= f.text_field :title%>
<%= f.label :category%>
<%= f.select :category, ["General", "Exercise", "Diet", "Career", "Other"], prompt: true %>
<%= f.hidden_field :completed?, :value => false %>
<%= f.label :due_date%>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.text_field :due_date%>
<%= f.submit :submit, :class => "btn btn-primary" %>
<% end %>   