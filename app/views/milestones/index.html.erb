
 <div class="jumbotron">
    <div class="d-flex">
         <div class="image-cropper">
             <img src="http://tinygraphs.com/squares/#{current_user.name}" class="index-user-prof-pic" alt="">  
         </div>
      <h1 class="display-4" style="margin-left: 10px; margin-top: 20px; margin-bottom: 10px;">Welcome <%= current_user.name.capitalize %></h1>  
    </div>
         <p class="lead" style="padding: 1em;">You have <%= current_user.milestones.count %> outstanding <%= current_user.milestones.count < 2 ? "task" : "tasks"  %>  to complete.</p>
    <%= button_to  "Create a New Milestone", new_milestone_path, :action => 'get', :method => "get", :class => "btn btn-primary" %>   
 </div>

 <br>

<div class="mx-auto container-fluid" style="width: 350px; padding: 1em;" >
    <h3><%= current_user.milestones.count >= 1 ? "M I L E S T O N E S" : "Please add some Milestones"  %> </h3>
</div>

<% if current_user.milestones.count > 0 %>

<% @user_milestones.each do |ms| %>
<div class="card subtask-container">
  <h5 class="card-header"> <%=ms.category%></h5>
  <div class="card-body">
    <h5 class="card-title"><%= ms.title %></h5>
    <p class="card-text">Created: <%= ms.created_at.strftime("%m/%d/%Y")%></p>
    <p class="card-text">Due: <%= ms.due_date%></p>
    <% if ms.completed? %>
    <div><input type="checkbox"  disabled checked name="completed?" value="completed?"> Task completed?</div>
    <% else %>
        <div><input type="checkbox"  name="completed?" value="completed?"> Milestone completed?</div>
    <% end %>
    <p class="card-text"><% ms.completed?%></p>
    <%= link_to  "View Task", milestone_path(ms.id), method: "get", class: "btn btn-primary" %>
  </div>
</div>

   <% end %>
     <% end %>
