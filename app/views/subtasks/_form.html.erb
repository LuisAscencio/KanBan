<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>

    <%= form_for(@subtask, class: "mx-auto") do |f| %>   
        <div class="form-group">
          <%= f.text_field :title, :placeholder => "How can you breakdown your task down into smaller steps?", :class => "form-control"%>
        </div>
        <%= f.hidden_field :completed?, :value => false %>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Task</label>
        </div>
            <%= collection_select(:subtask, :task_id, @user_tasks, :id, :title, { prompt: true }, { class: "custom-select"}) %>
    </div>
        <div class="d-flex justify-content-between">
        <%= f.submit :submit, :class => "btn btn-primary" %>
        <%= link_to  "Back to Subtasks", subtasks_path %>
        </div>
    <% end %>   
<br>






