<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>

    <%= form_for(@subtask, class: "mx-auto") do |f| %>   
        <div class="form-group">
          <%= f.text_field :title, :placeholder => "Describe the subtask here.", :class => "form-control"%>
        </div>
        <%= f.hidden_field :completed?, :value => false %>

        <div class="d-flex justify-content-between">
        <%= f.submit :submit, :class => "btn btn-primary" %>
        <%= link_to  "Back to Subtasks", subtasks_path %>
        </div>
    <% end %>   
<br>
