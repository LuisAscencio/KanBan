<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for(@task) do |f| %>
<%= f.label :title%>
<%= f.text_field :title%>
<%= f.label :priority%>
<%=f.select :priority, [["Low", 1], ["Medium", 2], ["High",3]]  %>
<%= f.hidden_field :completed?, :value => false %>
<%= f.label :due_date%>
<%= f.hidden_field :milestone_id, :value => params[:milestone_id] %>
<%= f.text_field :due_date%>
<%= collection_select(:task, :milestone_id, @user_milestones, :id, :title, prompt: true) %>
<%= f.submit :submit, :class => "btn btn-primary" %>
<% end %>   
<br>
<%= link_to  "Back to Tasks", tasks_path %>
