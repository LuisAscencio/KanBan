<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>

<%= form_for(@user) do |f| %>
<%= f.label :name%>
<%= f.text_field :name%>
<%= f.label :username%>
<%= f.text_field :username%>
<%= f.label :password%>
<%= f.text_field :password%>
<%= f.submit :submit, :class => "btn btn-primary" %>
<% end %>